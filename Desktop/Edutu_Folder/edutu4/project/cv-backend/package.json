{
  "name": "edutu-cv-backend",
  "version": "1.0.0",
  "description": "Enterprise-grade CV Management Backend for Edutu",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "npm run build && firebase emulators:start --only functions,firestore,storage",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "deploy:cv": "firebase deploy --only functions:cv",
    "logs": "firebase functions:log",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf lib",
    "build:watch": "tsc --watch"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.17.1",
    "busboy": "^1.6.0",
    "cors": "^2.8.5",
    "docx": "^8.2.2",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.8.1",
    "helmet": "^7.1.0",
    "html-pdf": "^3.0.1",
    "joi": "^17.12.1",
    "lodash": "^4.17.21",
    "mammoth": "^1.6.0",
    "moment": "^2.30.1",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.28.0",
    "pdf-parse": "^1.1.1",
    "pdf2pic": "^3.1.1",
    "puppeteer": "^21.11.0",
    "rate-limiter-flexible": "^5.0.3",
    "sharp": "^0.33.2",
    "tesseract.js": "^5.0.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/busboy": "^1.5.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/joi": "^17.2.3",
    "@types/lodash": "^4.14.202",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.19",
    "@types/pdf-parse": "^1.1.5",
    "@types/sharp": "^0.31.1",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "firebase-functions-test": "^3.1.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "firebase",
    "cloud-functions",
    "cv-management",
    "ai",
    "ocr",
    "ats-optimization"
  ],
  "author": "Edutu Team",
  "license": "MIT"
}
