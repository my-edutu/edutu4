# Firebase Configuration (Auto-detected in Cloud Functions)
FIREBASE_PROJECT_ID=your-project-id

# AI Service Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
AI_SERVICE_PROVIDER=anthropic  # or "openai"

# Google Cloud Services
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_VISION_API_KEY=your-vision-api-key
GOOGLE_CLOUD_STORAGE_BUCKET=your-bucket-name

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=50   # per window per user
RATE_LIMIT_MAX_UPLOADS=10    # file uploads per window

# File Processing
MAX_FILE_SIZE_MB=25
SUPPORTED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,webp
CV_STORAGE_PATH=cv-documents
TEMP_STORAGE_PATH=temp-processing

# OCR Configuration
TESSERACT_LANG=eng
OCR_CONFIDENCE_THRESHOLD=60
OCR_PSM_MODE=6  # Assume uniform block of text

# PDF Processing
PDF_QUALITY=100
PDF_MAX_PAGES=20
PDF_DPI=300

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
JWT_EXPIRES_IN=24h
ENCRYPTION_ALGORITHM=aes-256-gcm

# Monitoring & Logging
LOG_LEVEL=info  # debug, info, warn, error
ENABLE_PERFORMANCE_MONITORING=true
ERROR_REPORTING_ENABLED=true

# CV Templates
TEMPLATE_STORAGE_PATH=cv-templates
DEFAULT_TEMPLATE=modern-professional

# ATS Scoring
ATS_SCORE_WEIGHTS_KEYWORDS=0.3
ATS_SCORE_WEIGHTS_FORMAT=0.25
ATS_SCORE_WEIGHTS_STRUCTURE=0.25
ATS_SCORE_WEIGHTS_READABILITY=0.2

# Cache Configuration
REDIS_URL=redis://localhost:6379  # Optional for caching
CACHE_TTL_SECONDS=3600  # 1 hour

# Development Only
NODE_ENV=development
DEBUG_MODE=true
MOCK_AI_RESPONSES=false