{
  "name": "opportunities-aggregator",
  "version": "2.0.0",
  "description": "Enhanced Opportunities Aggregator Service for Edutu - Multi-source AI-powered educational & career opportunities backend with advanced caching and filtering",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:legacy": "ENHANCED_MODE=false ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:enhanced": "ENHANCED_MODE=true ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "build:clean": "rm -rf dist && tsc",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "test:api": "node test-api.js",
    "db:setup": "echo 'Run src/database/schema.sql in your PostgreSQL database'",
    "health": "curl http://localhost:3000/api/health | jq"
  },
  "keywords": ["opportunities", "education", "career", "api", "aggregator", "multi-source", "caching", "typescript", "express", "scholarships", "jobs", "internships"],
  "author": "Edutu Team",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "axios": "^1.6.0",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "uuid": "^9.0.1",
    "lodash": "^4.17.21",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "@types/compression": "^1.7.5",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/edutu/opportunities-aggregator.git"
  },
  "bugs": {
    "url": "https://github.com/edutu/opportunities-aggregator/issues"
  },
  "homepage": "https://github.com/edutu/opportunities-aggregator#readme"
}
